{
  "name": "lord-of-rings",
  "version": "1.0.0",
  "description": "The Lord of the Rings SDK",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly" : "npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "SDK"
  ],
  "author": "Charles R.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charles-dr/lord-of-rings.git"
  },
  "bugs": {
    "url": "https://github.com/charles-dr/lord-of-rings/issues"
  },
  "homepage": "https://github.com/charles-dr/lord-of-rings#readme",
  "devDependencies": {
    "prettier": "^2.8.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  }
}